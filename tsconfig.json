{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    // "declaration": true,
    "lib": ["es2017", "es7", "es6", "dom"],
		"moduleResolution": "node",
		"esModuleInterop": true,
    "strictNullChecks": false,
    "outDir": "./lib",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
     "types": []
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ]
}